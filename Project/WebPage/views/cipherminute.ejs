<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Cipher Minute</title>
  <link href="https://fonts.googleapis.com/css?family=Krub" rel="stylesheet">
  <link rel="stylesheet" href="https://necolas.github.io/normalize.css/8.0.0/normalize.css">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz" crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/css?family=Krub:400,700" rel="stylesheet">
  <link rel="stylesheet" href="/css/styledani.css">
</head>
<body>
  <header class="site-header">
    <nav>
      <!--Aqui va el menu!-->
      <div class="iconomenu">
          <a href="/users/home" style="color:black;">
            <i class="far fa-compass"></i>
          </a>
      </div>
    </nav>
  </header>
  <div class="hero">
    <div class="contenedor-hero">
      <h1>Cipher Minute</h1>
    </div>
  </div>

  <% if(filesCompletelySigned){ %>
    <div class="collection contenedor">
      <% filesCompletelySigned.forEach(function(file) { %>
        <div class="card mt-4" style="margin:auto;">
          <img class="card-img-top" src="/img/word.png" alt="Word Image">
          <div class="card-body mb-3">
            <h5 class="card-title"><%= file.filename %></h5>
            <% file.metadata.participants.forEach(function(participant) { %> 
              <li><i class="fas fa-user"></i>&nbsp;&nbsp;<%= participant.participantname %></li>      
            <% }); %>
            <form action="/users/cipherminute" method="POST">
              <div class="form-group">
                  <input type="hidden" class="form-control" name="docname" value="<%= file.filename %>">
                  <input type="text" class="form-control" name="password" placeholder="Enter the password...">
              </div>
              <input type="submit" value="Cipher" class="btn btn-primary">
              <!-- <a href="#" class="btn btn-primary">Cipher</a> -->
            </form>
          </div>
        </div>
      <% }); %>
    </div>
  <% } %>

  <% if(filesUncompletelySigned){ %>
    <div class="collection contenedor">
      <% filesUncompletelySigned.forEach(function(file) { %>
        <div class="card mt-4" style="margin:auto;">
          <img class="card-img-top" src="/img/word.png" alt="Word Image">
          <div class="card-body mb-3">
            <h5 class="card-title"><%= file.filename %></h5>
            <% file.metadata.participants.forEach(function(participant) { %> 
              <!-- <p class="card-text"></p> -->
              <li><i class="fas fa-user"></i>&nbsp;&nbsp;<%= participant.participantname %></li>      
            <% }); %>
            <a  class="btn btn-primary">Cipher</a>
          </div>
        </div>
      <% }); %>
    </div>
  <% } else {  %>
    <div style="width:80%;margin:auto;margin-top:3rem;">
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        There are no files to show. No Minute has been completely signed.
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    </div>
  <% } %>

  
  
</body>
</html>
